{% extends "base/base.html.jinja" %}
{% import "base/challenge_card.html.jinja" as challenge_card %}
{% block full_content %}
    {% if object.invalid_solutions_exist %}
        <div class="warning">
            You have some submissions that have been made invalid by updates to the challenge. Please go to your <a href="/user/{{ account.id }}">profile page</a> for a full list, to resubmit them.
        </div>
    {% endif %}
    <div class="bg-byte-green-900 text-byte-green-700">
        <section class="w-full py-12 md:py-24 lg:py-32 bg-byte-green-900 text-white">
            <div class="max-w-8xl mx-auto px-4 sm:px-6 md:px-8 lg:px-28">
                <div class="grid gap-6 lg:grid-cols-[1fr_400px] lg:gap-12 xl:grid-cols-[1fr_600px]">
                    <div class="flex flex-col justify-center space-y-4 gap-4 order-2 lg:order-1">
                        <div class="space-y-2">
                            <div class="inline-flex items-center gap-2 bg-byte-green-700/30 px-4 py-2 rounded-full text-byte-green-200 text-sm font-medium">
                                {% include "icons/ERk_c8MtrdNzzuOuc0iSiZRaLda8RSALJ3wimaKjX_s=.svg" %}
                                <a href="https://github.com/mousetail/Byte-Heist" class="text-white">Open Source
                                Community</a>
                            </div>
                            <h1 class="text-3xl font-bold tracking-tighter sm:text-5xl xl:text-6xl/none">
                                Crack the Code.
                                <br />
                                Pull Off the Perfect Heist.
                            </h1>
                            <p class="max-w-[600px] text-gray-300 md:text-xl">
                                ByteHeist is a fast, fun code golf platform where you solve problems with the least code
                                possible. All open source and built by the community.
                            </p>
                        </div>
                        <div class="flex flex-col gap-2 min-[400px]:flex-row">
                            <a href="/heists"
                               class="inline-flex h-10 items-center justify-center rounded-md bg-green-600 px-8 text-sm font-medium text-white shadow transition-colors hover:bg-byte-green-700 focus-visible:outline-none focus-visible:ring-1">
                                Start Heisting
                            </a>
                            <a href="/challenge"
                               class="inline-flex h-10 items-center justify-center rounded-md border border-byte-green-700 bg-transparent px-8 text-sm font-medium shadow-sm transition-colors hover:bg-green-900 text-white gap-2">
                                Create Heist
                                {% include "icons/Plus--Streamline-Unicons.svg" %}
                            </a>
                        </div>
                    </div>
                    <div class="relative flex items-center justify-center min-h-[400px] order-1 lg:order-2">
                        <div class="absolute w-[500px] h-56 z-0 bg-byte-green-700 rounded-full rotate-[20deg] top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
                        </div>
                        <img src="/static/thief.png"
                             alt="ByteHeist Thief"
                             class="w-96 relative z-10">
                    </div>
                </div>
            </div>
        </section>
        <section class="w-full py-12 md:py-24 lg:py-32 bg-byte-brown-950">
            <div class="max-w-8xl mx-auto px-4 sm:px-6 md:px-8 lg:px-28">
                <div class="flex flex-col items-center justify-center space-y-4 text-center">
                    <div class="space-y-2">
                        <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl text-white">Featured Heists</h2>
                        <p class="max-w-[900px] text-byte-brown-200 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed">
                            Choose your target. Each heist requires the most efficient code possible.
                        </p>
                    </div>
                </div>
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 mt-8">
                    {% for challenge in object.public_challenges %}
                        {% if loop.index <= 8 %}
                            {% if loop.index <=4 %}
                                {{ challenge_card::challenge_box(challenge=challenge) 
                                }}
                            {% elif loop.index <=6 %}
                                <div class="hidden sm:block">{{ challenge_card::challenge_box(challenge=challenge) }}</div>
                            {% else %}
                                <div class="hidden md:block">{{ challenge_card::challenge_box(challenge=challenge) }}</div>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="flex justify-center mt-8">
                    <a href="/heists"
                       class="inline-flex h-10 items-center justify-center rounded-md border border-green-700 bg-transparent px-8 text-sm font-medium shadow-sm transition-colors hover:bg-green-900 text-white gap-2">
                        View All Heists
                        {% include "icons/Angle-Right--Streamline-Unicons.svg" %}
                    </a>
                </div>
            </div>
        </section>
        <section class="w-full py-12 md:py-24 lg:py-32 bg-byte-brown-700">
            <div class="max-w-8xl mx-auto px-4 sm:px-6 md:px-8 lg:px-28">
                <div class="flex flex-col justify-between gap-6 xl:flex-row xl:gap-32">
                    <div class="flex flex-1 justify-center">
                        <img src="/static/safe.png"
                             alt="ByteHeist Safe"
                             class="h-[300px] sm:h-[400px] md:h-[500px] w-auto object-contain">
                    </div>
                    <div class="flex flex-col justify-center space-y-4 order-1 xl:order-2">
                        <div class="space-y-2">
                            <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl text-white">How ByteHeist Works</h2>
                            <p class="max-w-[700px] text-byte-brown-200 md:text-xl">
                                ByteHeist is all about solving coding challenges with the fewest characters possible. The
                                shorter your code, the higher your score.
                            </p>
                        </div>
                        <ul class="grid gap-6">
                            <li class="flex gap-2">
                                <div class="flex h-8 w-8 items-center justify-center rounded-full bg-byte-brown-500 text-white text-sm font-medium aspect-square">
                                    1
                                </div>
                                <div>
                                    <h3 class="font-bold text-white">Choose Your Heist</h3>
                                    <p class="text-byte-brown-200">
                                        Browse our collection of coding challenges across
                                        different difficulty levels.
                                    </p>
                                </div>
                            </li>
                            <li class="flex gap-2">
                                <div class="flex h-8 w-8 items-center justify-center rounded-full bg-byte-brown-500 text-white text-sm font-medium aspect-square">
                                    2
                                </div>
                                <div>
                                    <h3 class="font-bold text-white">Crack the Code</h3>
                                    <p class="text-byte-brown-200">
                                        Write the most efficient solution with the fewest
                                        characters possible.
                                    </p>
                                </div>
                            </li>
                            <li class="flex gap-2">
                                <div class="flex h-8 w-8 items-center justify-center rounded-full bg-byte-brown-500 text-white text-sm font-medium aspect-square">
                                    3
                                </div>
                                <div>
                                    <h3 class="font-bold text-white">Beat the Clock</h3>
                                    <p class="text-byte-brown-200">
                                        All challenges are time-limited. After they expire, all
                                        solutions become public.
                                    </p>
                                </div>
                            </li>
                            <li class="flex gap-2">
                                <div class="flex h-8 w-8 items-center justify-center rounded-full bg-byte-brown-500 text-white text-sm font-medium aspect-square">
                                    4
                                </div>
                                <div>
                                    <h3 class="font-bold text-white">Collaborate & Improve</h3>
                                    <p class="text-byte-brown-200">
                                        Suggest test cases, provide feedback, and help improve
                                        challenges.
                                    </p>
                                </div>
                            </li>
                        </ul>
                        <div>
                            <a href="/login/github"
                               class="inline-flex mt-4 h-10 items-center justify-center rounded-md bg-byte-green-700 px-8 text-sm font-medium text-white shadow transition-colors hover:bg-green-700 focus-visible:outline-none focus-visible:ring-1 gap-2">
                                Join the Crew
                                {% include "icons/Github--Streamline-Unicons.svg" %}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="w-full py-12 md:py-24 lg:py-32 bg-byte-brown-950">
            <div class="max-w-8xl mx-auto px-4 sm:px-6 md:px-8 lg:px-28">
                <div class="flex flex-col xl:flex-row justify-between items-center gap-8 xl:gap-12">
                    <div class="space-y-6 w-full xl:w-1/2">
                        <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl text-white">Join Our Community</h2>
                        <p class="text-byte-brown-200 md:text-xl leading-relaxed">
                            Become part of our growing network of developers who are already cracking codes and breaking
                            records.
                            Whether you're a beginner or a seasoned hacker, there's a place for you here.
                        </p>
                    </div>
                    <div class="space-y-4 w-full xl:w-auto">
                        <div class="flex flex-col sm:flex-row gap-4 justify-center w-full">
                            <a href="https://github.com/mousetail/Byte-Heist"
                               target="_blank"
                               rel="noopener"
                               class="inline-flex h-10 items-center justify-center rounded-md bg-gray-900 px-8 text-sm font-medium text-white shadow transition-colors hover:bg-gray-800 focus-visible:outline-none focus-visible:ring-1 gap-2 w-full sm:flex-1 xl:w-auto whitespace-nowrap">
                                {% include "icons/-DY6IpY-TEYG5lIROxU2yf6NqNolmaBgXoNnmR27GUg=.svg" %}
                                Contribute on GitHub
                            </a>
                            <a href="https://discord.gg/ugbfdgzpjK"
                               target="_blank"
                               rel="noopener"
                               class="inline-flex h-10 items-center justify-center rounded-md bg-indigo-600 px-8 text-sm font-medium text-white shadow transition-colors hover:bg-indigo-700 focus-visible:outline-none focus-visible:ring-1 gap-2 w-full sm:flex-1 xl:w-auto whitespace-nowrap">
                                {% include "icons/M6BR7_atYUpUmG57KugJNLlGW2FDsCr6MSBq6XgpKGQ=.svg" %}
                                Join Our Discord
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock full_content %}
