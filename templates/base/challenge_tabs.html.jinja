{% macro challenge_tabs(active, name, id, author) %}
    <div class="tabs">
        <span class="tab {% if active=="solve" %} active {% endif %}">
            <a href="/challenge/{{ id }}/{{name | slugify }}/solve">Solve</a>
        </span>
        <span class="tab {% if active=="view" %} active {% endif %}">
            <a href="/challenge/{{ id }}/{{name | slugify }}/view">View</a>
        </span>
        {% if account.id == author or account.admin %}
            <span class="tab {% if active=="edit" %} active {% endif %}">
                <a href="/challenge/{{ id }}/{{name | slugify }}/edit">Edit</a>
            </span>
        {% endif %}
    </div>
{% endmacro challenge_tabs %}