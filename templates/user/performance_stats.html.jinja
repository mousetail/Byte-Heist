<!-- Performance Stats -->
<div class="border border-byte-brown-500 bg-byte-brown-700 rounded-lg">
    <div class="p-6">
        <h3 class="text-white flex items-center gap-2 text-lg font-semibold mb-4">
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="20"
                 height="20"
                 fill="none"
                 viewBox="0 0 24 24"
                 stroke="currentColor"
                 stroke-width="2"
                 class="text-green-500">
                <path d="M22 12h-4l-3 9L9 3l-3 9H2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            Performance Stats
        </h3>
        <div class="space-y-4">
            <div class="space-y-2">
                <div class="flex justify-between text-sm">
                    <span class="text-byte-brown-200">Most used languages</span>
                    <span class="text-white">
                        {% if object.per_language_stats | length == 0 %}
                            No solutions yet
                        {% elif object.per_language_stats | length == 1 %}
                            Specialist
                        {% elif object.per_language_stats | length == 2 %}
                            Bilingual
                        {% elif object.per_language_stats | length == 3 %}
                            Generalist
                        {% elif object.per_language_stats | length == 4 %}
                            Polyglot
                        {% else %}
                            Omniglot
                        {% endif %}
                    </span>
                </div>
                <div class="w-full flex bg-byte-brown-500 rounded-full h-2">
                    {% for language in object.per_language_stats %}
                        <div class="h-2
                                    {% if loop.first %}rounded-l-full{% endif %}
                                    {% if loop.last %}rounded-r-full{% endif %}"
                             style="flex-grow: {{ language.total_score }};
                                    background-color: {{ langs[language.language].color }}"
                             data-tooltip="{{ langs[language.language].displayName }}"
                             title="{{ langs[language.language].displayName }}"></div>
                    {% endfor %}
                </div>
            </div>
            <div class="space-y-2">
                <div class="flex justify-between text-sm">
                    <span class="text-byte-brown-200">Most popular category</span>
                    <span class="text-white">
                        {%- if object.per_category_stats | empty -%}
                            No solutions
                        {%- elif object.per_category_stats[0].category == 'code-golf' -%}
                            Mostly Code Golf
                        {%- else -%}
                            Mostly restricted source
                        {%- endif -%}
                    </span>
                </div>
                <div class="w-full flex bg-byte-brown-500 rounded-full h-2">
                    {% for category in object.per_category_stats %}
                        <div class="h-2
                                    {% if loop.first %}rounded-l-full{% endif %}
                                    {% if loop.last %}rounded-r-full{% endif %}"
                             style="flex-grow: {{ category.total_score }};
                                    background-color: {%- if category.category == 'code-golf' -%} green {%- else -%} blue {%- endif -%}"
                             data-tooltip="{{ category.category }}"
                             title="{{ category.category }}"></div>
                    {% endfor %}
                </div>
            </div>
            <div class="space-y-2">
                <div class="flex justify-between text-sm">
                    <span class="text-byte-brown-200">Average Ranking</span>
                    <span class="text-white">Fairly good</span>
                </div>
                <div class="w-full flex bg-byte-brown-500 rounded-full h-2">
                    <div class="h-2 rounded-l-full"
                         style="flex-grow: {{ object.account_info.first_places }};
                                background-color: gold"
                         data-tooltip="First Places"
                         title="First Places"></div>
                    <div class="h-2"
                         style="flex-grow: {{ object.account_info.top_ten_percents - object.account_info.first_places }};
                                background-color: silver"
                         data-tooltip="Top 10%"
                         title="Top 10%"></div>
                    <div class="h-2 rounded-r-full"
                         style="flex-grow: {{ object.account_info.solutions - object.account_info.top_ten_percents }};
                                background-color: green"
                         data-tooltip="Other Solutions"
                         title="Other Solutions"></div>
                </div>
            </div>
        </div>
    </div>
</div>
