<!-- Performance Stats -->
<div class="border border-byte-brown-500 bg-byte-brown-700 rounded-lg">
    <div class="p-6">
        <h3 class="text-white flex items-center gap-2 text-lg font-semibold mb-4">
            {% include "icons/heartbeat.svg" %}
            Performance Stats
        </h3>
        <div class="space-y-4">
            <div class="space-y-2">
                <div class="flex justify-between text-sm">
                    <span class="text-byte-brown-200">Most used languages</span>
                    <span class="text-white">
                        {% if object.per_language_stats | length == 0 %}
                            No solutions yet
                        {% elif object.per_language_stats | length == 1 %}
                            Specialist
                        {% elif object.per_language_stats | length == 2 %}
                            Bilingual
                        {% elif object.per_language_stats | length == 3 %}
                            Generalist
                        {% elif object.per_language_stats | length == 4 %}
                            Polyglot
                        {% else %}
                            Omniglot
                        {% endif %}
                    </span>
                </div>
                <div class="w-full flex bg-byte-brown-500 rounded-full h-2">
                    {% for language in object.per_language_stats %}
                        <div class="h-2
                                    {% if loop.first %}rounded-l-full{% endif %}
                                    {% if loop.last %}rounded-r-full{% endif %}"
                             style="flex-grow: {{ language.total_score }};
                                    background-color: {{ langs[language.language].color }}"
                             data-tooltip="{{ langs[language.language].displayName }} ({{ language.total_score | format_number }} points)"
                             title="{{ langs[language.language].displayName }}"></div>
                    {% endfor %}
                </div>
            </div>
            <div class="space-y-2">
                <div class="flex justify-between text-sm">
                    <span class="text-byte-brown-200">Most popular category</span>
                    <span class="text-white">
                        {%- if object.per_category_stats | empty -%}
                            No solutions
                        {%- elif object.per_category_stats[0].category == 'code-golf' -%}
                            Mostly Code Golf
                        {%- else -%}
                            Mostly restricted source
                        {%- endif -%}
                    </span>
                </div>
                <div class="w-full flex bg-byte-brown-500 rounded-full h-2">
                    {% for category in object.per_category_stats %}
                        <div class="h-2
                                    {% if loop.first %}rounded-l-full{% endif %}
                                    {% if loop.last %}rounded-r-full{% endif %}"
                             style="flex-grow: {{ category.total_score }};
                                    background-color: {%- if category.category == 'code-golf' -%} green {%- else -%} blue {%- endif -%}"
                             data-tooltip="{{ category.category }} ({{ category.total_score | format_number }} points)"
                             title="{{ category.category }}"></div>
                    {% endfor %}
                </div>
            </div>
            <div class="space-y-2">
                <div class="flex justify-between text-sm">
                    <span class="text-byte-brown-200">Average Ranking</span>
                    <span class="text-white">
                        {% set ranking_funny_name_index = (object.account_info.first_places + object.account_info.top_ten_percents * 3 + object.account_info.solutions * 5) % 13 %}
                        {% if ranking_funny_name_index == 0 %}
                            Fairly Good
                        {% elif ranking_funny_name_index == 1 %}
                            Mediocre
                        {% elif ranking_funny_name_index == 2 %}
                            Savory
                        {% elif ranking_funny_name_index == 3 %}
                            Strange
                        {% elif ranking_funny_name_index == 4 %}
                            Special
                        {% elif ranking_funny_name_index == 5 %}
                            Magnificent
                        {% elif ranking_funny_name_index == 6 %}
                            Concerning
                        {% elif ranking_funny_name_index == 7 %}
                            Mismatched
                        {% elif ranking_funny_name_index == 8 %}
                            Cool
                        {% elif ranking_funny_name_index == 9 %}
                            Fresh
                        {% elif ranking_funny_name_index == 10 %}
                            Rough
                        {% elif ranking_funny_name_index == 11 %}
                            Wise
                        {% elif ranking_funny_name_index == 12 %}
                            Impatient
                        {% endif %}
                    </span>
                </div>
                <div class="w-full flex bg-byte-brown-500 rounded-full h-2">
                    <div class="h-2 rounded-l-full"
                         style="flex-grow: {{ object.account_info.first_places }};
                                background-color: gold"
                         data-tooltip="{{ object.account_info.first_places }} First Places"
                         title="{{ object.account_info.first_places }} First Places"></div>
                    <div class="h-2"
                         style="flex-grow: {{ object.account_info.top_ten_percents - object.account_info.first_places }};
                                background-color: silver"
                         data-tooltip="{{ object.account_info.top_ten_percents - object.account_info.first_places }} Top 10%"
                         title="Top 10%"></div>
                    <div class="h-2 rounded-r-full"
                         style="flex-grow: {{ object.account_info.solutions - object.account_info.top_ten_percents }};
                                background-color: green"
                         data-tooltip="{{ object.account_info.solutions - object.account_info.top_ten_percents }} Other Solutions"
                         title="Other Solutions"></div>
                </div>
            </div>
        </div>
    </div>
</div>
